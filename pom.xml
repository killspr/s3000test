    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.2</version>
                <executions>
                    <execution>
                        <id>install-oidc-oauth2-sdk</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>jar</packaging>
                            <groupId>com.vmware.vapi</groupId>
                            <artifactId>oidc-oauth2-sdk</artifactId>
                            <version>${oidc-oauth2.version}</version>
                            <file>./lib/oidc-oauth2-sdk-${oidc-oauth2.version}.jar</file>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-draas-bindings</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>jar</packaging>
                            <groupId>com.vmware.vmc</groupId>
                            <artifactId>vmc-draas-bindings</artifactId>
                            <version>${vmc.draas.version}</version>
                            <file>./lib/vmc-draas-bindings-${vmc.draas.version}.jar</file>
                            <javadoc>./lib/vmc-draas-bindings-${vmc.draas.version}-javadoc.jar</javadoc>
                            <sources>./lib/src/vmc-draas-bindings-sources-${vmc.draas.version}.jar</sources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-vapi-runtime</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>jar</packaging>
                            <groupId>com.vmware.vapi</groupId>
                            <artifactId>vapi-runtime</artifactId>
                            <version>${vapi.version}</version>
                            <file>./lib/vapi-runtime-${vapi.version}.jar</file>
                            <javadoc>./lib/vapi-runtime-${vapi.version}-javadoc.jar</javadoc>
                            <sources>./lib/src/vapi-runtime-${vapi.version}-sources.jar</sources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-vapi-authentication</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>jar</packaging>
                            <groupId>com.vmware.vapi</groupId>
                            <artifactId>vapi-authentication</artifactId>
                            <version>${vapi.version}</version>
                            <file>./lib/vapi-authentication-${vapi.version}.jar</file>
                            <javadoc>./lib/vapi-authentication-${vapi.version}-javadoc.jar</javadoc>
                            <sources>./lib/src/vapi-authentication-${vapi.version}-sources.jar</sources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-vapi-samltoken</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>jar</packaging>
                            <groupId>com.vmware.vapi</groupId>
                            <artifactId>vapi-samltoken</artifactId>
                            <version>${vapi.version}</version>
                            <file>./lib/vapi-samltoken-${vapi.version}.jar</file>
                            <javadoc>./lib/vapi-samltoken-${vapi.version}-javadoc.jar</javadoc>
                            <sources>./lib/src/vapi-samltoken-${vapi.version}-sources.jar</sources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-vim25</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>jar</packaging>
                            <groupId>com.vmware.vim25</groupId>
                            <artifactId>vim25</artifactId>
                            <version>${vspherewssdk.version}</version>
                            <file>./lib/vim25.jar</file>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-ssoclient</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>jar</packaging>
                            <groupId>com.vmware.sso</groupId>
                            <artifactId>ssoclient</artifactId>
                            <version>${vspherewssdk.version}</version>
                            <file>./lib/ssoclient.jar</file>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-lookupservice</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>jar</packaging>
