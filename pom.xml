        <jaxb-ri.version>2.3.8</jaxb-ri.version>
        <maven-surefire-plugin.version>2.22.1</maven-surefire-plugin.version>
        <aspectj.version>1.9.20.1</aspectj.version>
        <allure-testng.version>2.23.0</allure-testng.version>


